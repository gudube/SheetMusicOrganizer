<Window x:Class="MusicPlayerForDrummers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayerForDrummers"
        mc:Ignorable="d"
        Title="MainWindow" Height="855" Width="1520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu here-->
            <RowDefinition Height="*"/> <!-- Content here (all remaining space) -->
            <RowDefinition Height="Auto"/> <!-- Status here -->
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Height="20"></Menu>
        <Frame Grid.Row="1"  x:Name="MainFrame"/>
        <StatusBar Grid.Row="2" Height="20"> Status, can contain information about song, etc. </StatusBar>
    </Grid>
</Window>
