<UserControl x:Class="MusicPlayerForDrummers.View.SongsGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicPlayerForDrummers.View"
             mc:Ignorable="d" 
             Name="MainControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid DataContext="{Binding RelativeSource={RelativeSource Self}}">
        <DataGrid Grid.Column="2" ItemsSource="{Binding ElementName=MainControl, Path=DataContext.Songs}"/>
        <Button Name="OpenFileButton" VerticalAlignment="Center" HorizontalAlignment="Center" Click="OpenFileButton_Click">
            <StackPanel Orientation="Vertical">
                <Image Source="/View/Resources/music_40.png" MaxHeight="40" Margin="0, 2, 0, 0"/>
                <TextBlock Text="OPEN MUSIC FILE" Margin="0, 10, 0, 0"/>
            </StackPanel>
        </Button>
        
    </Grid>
    <!-- ADD SONGS -->
</UserControl>
