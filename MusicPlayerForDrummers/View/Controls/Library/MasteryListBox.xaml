<UserControl x:Class="MusicPlayerForDrummers.View.MasteryListBox"
             x:Name="MasteryUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:MusicPlayerForDrummers.Model"
             xmlns:local="clr-namespace:MusicPlayerForDrummers.View"
             xmlns:dd="urn:gong-wpf-dragdrop"
             mc:Ignorable="d" 
             d:DesignHeight="1520" d:DesignWidth="400"
             Style="{StaticResource InsideLightControl}">
    <ListBox Name="MainListBox" SelectionMode="Multiple" ItemsSource="{Binding Path=MasteryLevels, Mode=OneWay}"
             SelectionChanged="ListBox_SelectionChanged"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             dd:DragDrop.IsDropTarget="True" dd:DragDrop.DropHandler="{Binding ElementName=MasteryUC}">
        <ListBox.Resources>
            <DataTemplate DataType="{x:Type model:MasteryItem}">
                <local:SelectableTextItem IsLocked="{Binding IsLocked}" Text="{Binding Name}" IsCustomColor="True" TextColor="{Binding Color}"/>
            </DataTemplate>
        </ListBox.Resources>
    </ListBox>
</UserControl>
