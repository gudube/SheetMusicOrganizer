<UserControl x:Class="MusicPlayerForDrummers.View.SwitchViewButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicPlayerForDrummers.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="30"
             Style="{StaticResource ControlBackgroundLv2}">
    <Button HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" BorderThickness="0"
            DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}" Command="{Binding SwitchViewCommand}"
            Style="{StaticResource 3DButton}">
        <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                <StackPanel.LayoutTransform>
                    <RotateTransform Angle="{Binding Angle}"/>
                </StackPanel.LayoutTransform>
                <Image Source="/View/Resources/switch_view_40.png" MaxWidth="20"/>
                <TextBlock Text="{Binding Title}" Margin="15,0"/>
                <Image Source="/View/Resources/switch_view_40.png" MaxWidth="20"/>
            </StackPanel>
        </Grid>
    </Button>
</UserControl>
