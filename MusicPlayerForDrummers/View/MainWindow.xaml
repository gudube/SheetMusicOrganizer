<Window x:Class="MusicPlayerForDrummers.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayerForDrummers.View"
        xmlns:vm="clr-namespace:MusicPlayerForDrummers.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="855" Width="1520" Style="{StaticResource ControlBackgroundLv1}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LibraryVM}">
            <local:LibraryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PartitionVM}">
            <local:PartitionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SyncVM}">
            <local:SyncView/>
        </DataTemplate>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Menu here-->
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/> <!-- Content here (all remaining space) -->
            <RowDefinition Height="Auto"/> <!-- Status here -->
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Height="20">
            <MenuItem Header="File"/>
        </Menu>
        <Border Grid.Row="1" Style="{StaticResource LightBorder}"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <local:SwitchViewButton Grid.Column="0" Title="{Binding LeftViewTitle}" Direction="Left"
                                    Visibility="{Binding Path=CanSwitchViewLeft, Converter={StaticResource BoolToVis}}"
                                    SwitchViewCommand="{Binding SwitchViewLeftCommand}"/>
            <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}"/>
            <local:SwitchViewButton Grid.Column="2" Title="{Binding RightViewTitle}" Direction="Right"
                                    Visibility="{Binding Path=CanSwitchViewRight, Converter={StaticResource BoolToVis}}"
                                    SwitchViewCommand="{Binding SwitchViewRightCommand}"/>
        </Grid>
        <StatusBar Grid.Row="3" Height="20"> Status, can contain information about song, etc. </StatusBar>
    </Grid>
</Window>
