<Expander x:Class="SheetMusicOrganizer.View.Controls.OptionalExpander"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SheetMusicOrganizer.View.Controls"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:OptionalExpander}">
    <Expander.Header>
        <TextBlock Text="Advanced options" Opacity="{Binding HeaderOpacity}" Foreground="{DynamicResource ClickableSolidColor}"/>
    </Expander.Header>
</Expander>
