<UserControl x:Class="SheetMusicOrganizer.View.Pages.Settings.StyleSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SheetMusicOrganizer.View.Pages.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Style="{StaticResource LabelTextBlock}">Theme</TextBlock>
            <ComboBox HorizontalAlignment="Left" SelectedIndex="{Binding ThemeIndex, Mode=OneWay}" Margin="0,5,0,0" Width="100">
                <ComboBoxItem Selected="DarkTheme_Selected">Dark (default)</ComboBoxItem>
                <ComboBoxItem Selected="LightTheme_Selected">Light</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
