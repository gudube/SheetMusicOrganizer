<UserControl x:Class="SheetMusicOrganizer.View.Pages.Settings.AdvancedSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SheetMusicOrganizer.View.Pages.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" Margin="10">
        <Button Content="Reset" Click="ResetButton_Click" Style="{StaticResource 3DButton}" HorizontalAlignment="Left"/>
        <TextBlock Style="{StaticResource LabelTextBlock}" TextWrapping="Wrap">Warning: This will reset all settings (including recently opened librairies). The application will restart as it was first installed. The library files are not affected and can be reopened after.</TextBlock>
    </StackPanel>
</UserControl>
