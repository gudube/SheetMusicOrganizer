<UserControl x:Class="SheetMusicOrganizer.View.Pages.Settings.LibrarySettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SheetMusicOrganizer.View.Pages.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Style="{DynamicResource LabelTextBlock}">When going into Partition mode, open the partition of the :</TextBlock>
        <ComboBox HorizontalAlignment="Left" Margin="0,5,0,0" Width="200" SelectedIndex="{Binding PartitionSelectionMode, Mode=TwoWay}">
            <ComboBoxItem TabIndex="0">Selected Song (Default)</ComboBoxItem>
            <ComboBoxItem TabIndex="1">Playing Song</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</UserControl>
